{
  "name": "node-chatroom",
  "description": "Chat room built with Node JS and Express.",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "develop": "node --inspect -r ts-node/register src/server/server.ts",
    "develop:watch": "./node_modules/nodemon/bin/nodemon.js",
    "start": "npm run develop",
    "start:watch": "npm run develop:watch",
    "build": "tsc",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:watch": "mocha -r ts-node/register src/**/*.spec.ts --watch src/**/*.spec.ts --watch-extensions ts"
  },
  "dependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "express": "^4.17.1",
    "mocha": "^6.2.0",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.3",
    "@types/ws": "^6.0.3",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  }
}
